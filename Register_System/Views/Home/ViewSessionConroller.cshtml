@model IEnumerable<Register_System.Models.Session>
@{
    ViewBag.Title = "ViewSessions";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<h2>Attended Sessions</h2>
<h4>Sessions Attended to-date</h4>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.Label("Title")</th>
            <th>@Html.Label("Date")</th>
            <th>@Html.Label("Description")</th>
            <th>@Html.Label("Session Code")</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var r in Model)
        {
        <tr>
            <td>@Html.DisplayFor(x => r.SessionTitle)</td>
            <td>@Html.DisplayFor(x => r.SessionDate)</td>
            <td>@Html.DisplayFor(x => r.SessionDescription)</td>
            <td>@Html.DisplayFor(x => r.UniqueCode)</td>
        </tr>
        }
    </tbody>
</table>
