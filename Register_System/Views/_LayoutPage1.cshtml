    @if (Request.IsAuthenticated)
    {
        if (Session["UserType"] != null)
        {
            if (Session["UserType"].ToString() == "1")
            {
                <div class="sidenav">
                    @Html.ActionLink("Logout", "Logout")
                    @Html.ActionLink("View Attended Session", "ViewAttendedSession")
                    @Html.ActionLink("Upcoming Sessions", "UpcomingSessionController")
                </div>

            }
            else
            {
                <div class="sidenav">
                    @Html.ActionLink("Logout", "Logout")
                    @Html.ActionLink("Check In", "CheckInController")
                    @Html.ActionLink("View Sessions", "ViewSessionConroller")
                    @Html.ActionLink("Upcoming Sessions", "UpcomingSessionController")
                </div>
            }
        }
        else
        {
            <div class="sidenav">
                @Html.ActionLink("Login", "LoginController")
            </div>
        }
    }
    else
    {
        <div class="sidenav">
            @Html.ActionLink("Login", "LoginController")
        </div>
    }


    <div class="content">
        @RenderBody()
    </div>
</body>

</html>
